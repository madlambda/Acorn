for file in `ls $BASEDIR/auto/deps`; do
    . $BASEDIR/auto/deps/$file
done

cat << END > common.mk
CFLAGS=$CC_OPT
LDFLAGS=$LD_OPT

LIBDIR=$LIBDIR
INCDIR=$INCDIR

OBJDIR=$OBJDIR
OBJCMDDIR=$OBJCMDDIR
END

cat << END > Makefile
include common.mk

all: acorn oak cmd

.PHONY: acorn
acorn:
	\$(MAKE) -C acorn

.PHONY: oak
oak:
	\$(MAKE) -C oak

.PHONY: cmd
cmd:
	@for c in cmd/*; do \$(MAKE) -C \$\$c; done

.PHONY: clean
clean:
	rm -rf \$(OBJDIR)

END
